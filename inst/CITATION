citHeader("To cite truncSP in publications use:")

citEntry(entry = "Article",
  title        = "{truncSP}: An {R} Package for Estimation of Semi-Parametric Truncated Linear Regression Models",
  author       = personList(as.person("Maria Karlsson"),
                   as.person("Anita Lindmark")),
  journal      = "Journal of Statistical Software",
  year         = "2014",
  volume       = "57",
  number       = "14",
  pages        = "1--19",
  url          = "http://www.jstatsoft.org/v57/i14/",

  textVersion  =
  paste("Maria Karlsson, Anita Lindmark (2014).",
        "truncSP: An R Package for Estimation of Semi-Parametric Truncated Linear Regression Models.",
        "Journal of Statistical Software, 57(14), 1-19.",
        "URL http://www.jstatsoft.org/v57/i14/.")
)

